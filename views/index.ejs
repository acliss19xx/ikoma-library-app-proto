                <img src="{{MediumImageURL}}" height="120px">
              </div>
              <div class="book_title">{{Title}}</div>
              <div class="lib_icon">
                {{{HtmlRentaledIconsHtml}}}
                {{{HtmlRecommendedHtml}}}
              </div>
            </div>
          </a>
        {{/each}}
      </script>

