        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
          {{#each this}}
            <li><a href="#" onClick="setViewStyle('{{@key}}')">{{this.name}}</a></li>
          {{/each}}
        </ul>
      </div></p>
      <p><input type="button" class="btn btn-default" id="useFromMultiDevice" value="マルチデバイスでの使用" onClick=""></p>
    </script>

